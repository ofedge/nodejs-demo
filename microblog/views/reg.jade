extends layout
block content
    form(class='form-horizontal' method='post')
        fieldset
            legend 用户注册
            div.control-group
                label(class='control-label' for='username') 用户名
                div.controls
                    input(type='text' class='input-xlarge' id='username' name='username')
            div.control-group
                label(class='control-label' for='password') 口令
                div.controls
                    input(type='password' class='input-xlarge' id='password' name='password')
            div.control-group
                label(class='control-label' for='password-repeat') 重复输入口令
                div.controls
                    input(type='password' class='input-xlarge' id='password-repeat' name='password-repeat')
            div.form-actions
                button(type='submit' class='btn btn-primary') 注册